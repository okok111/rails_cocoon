<h1>posts#new</h1>
<%= form_for @post do |f| %>
<div class="field">
    <%= f.label :title %>
    <p><%= f.text_field :title, :size => 20 %></p>
    <%= f.label :image %>
    <p><%= f.file_field :image %></p>
    <%= f.label :contents %>
    <p><%= f.text_field :contents, :size => 20 %></p>
</div>


<div class="recipe-ingredients">
    <div class="mx-auto">
        <%= f.fields_for :post_ingredient do |t| %>
            <%= render "posts/post_ingredient_fields", f: t %>
        <% end %>
    </div>

    <div id="detail-association-insertion-point"></div>

    <div class="col-10 mx-auto mt-2">
        <%= link_to_add_association "+フォームを追加", f, :post_ingredient,
        class: "btn btn-secondary btn-block",
        data: {
        association_insertion_node: '#detail-association-insertion-point',
        association_insertion_method: 'after'
        }%>
    </div>
</div>
<%= f.submit "postする" %>
<% end %>
<%= link_to "post一覧に戻る", posts_path %>
